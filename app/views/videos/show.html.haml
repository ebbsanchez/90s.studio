= image_tag 'four_color.png', class: "full bg"
%header
	#video_title.content_title.video_title{data: {mercury: "simple"}}
		=@video.title


- if user_signed_in?
	.btn-container
		#edit_link_container.round_button=link_to 'Edit', "/editor" + request.path, data: {no_turbolink: true}, id: "edit_link",class: "a_block"
		.round_button=link_to 'Delete', video_path, method: :delete, data: {no_turbolink: true, confirm: "確定刪除？"}, class: "a_block"


%article.content_container.video_content
	
	- if user_signed_in?
		#video_url{data: {mercury: "simple"}}
			=@video.link

	%iframe{:src => "http://www.youtube.com/embed/#{ YouTubeAddy.extract_video_id( @video.link )}", :frameborder => "0",width: "100%", height: "281px"}
	#video_description{data: {mercury: "full"}}
		=raw @video.description
	%br/
	%br/
	%br/


.btn-container
	.round_button= link_to "Back", videos_path, class: "a_block"
	.round_button= link_to "Top", "#", class: "a_block"