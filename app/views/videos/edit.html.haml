%header
	#video_title.content_title.video_title
		=@video.title


- if user_signed_in?
	.btn-container
		.round_button=link_to 'Delete', video_path, method: :delete, data: {no_turbolink: true, confirm: "確定刪除？"}, class: "a_block"


%article.content_container.video_content
	%iframe{:src => "http://www.youtube.com/embed/#{ YouTubeAddy.extract_video_id( @video.link )}", :frameborder => "0",width: "100%", height: "281px"}
	=simple_form_for @video do |f|
		=f.input :title, as: 'string'
		=f.input :link, as: 'string'
		=f.input :description,as: :text,:input_html => {:class => "redactor"}
		.submit-container=f.submit


.btn-container
	.round_button= link_to "Back", videos_path, class: "a_block"
	.round_button= link_to "Top", "#", class: "a_block"